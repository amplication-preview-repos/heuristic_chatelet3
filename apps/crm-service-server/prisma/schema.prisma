datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  completed     Boolean?
  createdAt     DateTime     @default(now())
  customer      Customer?    @relation(fields: [customerId], references: [id])
  customerId    String?
  description   String?
  dueDate       DateTime?
  id            String       @id @default(cuid())
  opportunity   Opportunity? @relation(fields: [opportunityId], references: [id])
  opportunityId String?
  title         String?
  updatedAt     DateTime     @updatedAt
}

model Customer {
  address       String?
  createdAt     DateTime      @default(now())
  email         String?
  firstName     String?
  id            String        @id @default(cuid())
  lastName      String?
  opportunities Opportunity[]
  phone         String?
  tasks         Task[]
  updatedAt     DateTime      @updatedAt
}

model Opportunity {
  createdAt   DateTime               @default(now())
  customer    Customer?              @relation(fields: [customerId], references: [id])
  customerId  String?
  description String?
  id          String                 @id @default(cuid())
  status      EnumOpportunityStatus?
  tasks       Task[]
  title       String?
  updatedAt   DateTime               @updatedAt
  value       Float?
}

model Lead {
  createdAt DateTime        @default(now())
  email     String?
  firstName String?
  id        String          @id @default(cuid())
  lastName  String?
  phone     String?
  status    EnumLeadStatus?
  updatedAt DateTime        @updatedAt
}

enum EnumOpportunityStatus {
  Option1
}

enum EnumLeadStatus {
  Option1
}
